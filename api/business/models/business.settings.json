{
  "kind": "collectionType",
  "collectionName": "businesses",
  "info": {
    "name": "Business"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "default": "Business"
    },
    "logo": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "tagline": {
      "type": "string",
      "default": "Your tagline goes here"
    },
    "description": {
      "type": "text",
      "default": "Your text goes here ...."
    },
    "work_images": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "address": {
      "type": "string",
      "default": "Addresss goes here"
    },
    "user": {
      "plugin": "users-permissions",
      "model": "user"
    },
    "testimonials": {
      "collection": "testimonial",
      "via": "business"
    },
    "email": {
      "type": "string",
      "default": "test@server.com"
    },
    "phone": {
      "type": "string",
      "default": "1231231234"
    },
    "blogs": {
      "collection": "blog",
      "via": "business"
    }
  }
}
